global:
  scrape_interval: 15s
  external_labels:
    dc: "{{ dc }}"
    env: "{{ env }}"
    owner: "{{ owner }}"
    bare_metal: "{{ bare_metal }}"

scrape_configs:
  - job_name: node_exporter
    static_configs:
      - targets:
          - "{{ ansible_default_ipv4.address }}:9100"
        labels:
          service: node_exporter

    relabel_configs:
      - target_label: node_name
        replacement: "{{ ansible_hostname }}"
